page{ 
 height: 100%; 
} 
  
.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
}
.background-image{
  height : 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
}
.text{
  color: white;
  position: absolute; 
  margin-top:10rpx;
  margin-left:50rpx;
  font-size:14px;
}
/*登录图片*/
.login-icon{ 
 flex: none; 
} 
.login-img{ 
 width: 750rpx; 
} 
  
/*表单内容*/
.login-from { 
 margin-top: 350rpx; 
 flex: auto; 
 height:100%; 
 position: relative;
} 
  
.inputView { 
 background-color:#cccccc;
 border-radius: 50px; 
 line-height: 30px; 
 margin-top: 30px;
 background: rgba(250, 246, 246, 0.192);
} 
/*输入框*/
.nameImage, .keyImage { 
 margin-left: 22px;
 margin-top: 11px; 
 width: 40rpx; 
 height: 40rpx
}  
.inputText { 
 flex: block; 
 float: right; 
 margin-right: 60px; 
 margin-top: 10px;
 color:white; 
 font-size: 14px;
 padding-left: 10px;
}  
/*按钮*/
.loginBtnView { 
 width: 100%; 
 height: auto; 
 margin-top: 0px; 
 margin-bottom: 0px; 
 padding-bottom: 0px; 
} 
  
.loginBtn { 
 width: 98%; 
 margin-top: 35px;
 border-radius: 50rpx; 
 background-color: #FEA152;
 color: white; 
}