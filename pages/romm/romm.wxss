/* pages/romm/romm.wxss */
page{ 
 height: 100%; 
} 
  
.container { 
 height: 100%; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color:white;
}
.background-image{
  height : 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
}  
/*登录图片*/
.login-icon{ 
 flex: none; 
} 
.login-img{ 
 width: 750rpx; 
} 
  
/*表单内容*/
.login-from { 
 margin-top: 130px; 
 flex: auto; 
 height:100%; 
 position: relative;
} 
  
.inputView { 
 background: rgba(0, 0, 0, 0.192);
 border: 0;
 border-radius: 5px; 
 line-height: 44px; 
 margin-top:100rpx;
} 
/*输入框*/
.nameImage, .keyImage { 
 margin-left: 22px; 
 width: 14px; 
 height: 14px
} 
  
.loginLab { 
 margin: 15px 15px 15px 10px; 
 color:white; 
 font-size: 14px
} 
.inputText { 
 flex: block; 
 float: right; 
 text-align: right; 
 margin-right: 20px; 
 margin-top: 11px;
 color:white; 
 font-size: 14px
}  
/*按钮*/
.loginBtnView { 
 width: 100%; 
 height: auto; 
 margin-top: 0px; 
 margin-bottom: 0px; 
 padding-bottom: 0px; 
} 
  
.loginBtn { 
 width: 80%; 
 margin-top: 35px; 
}