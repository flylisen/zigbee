<!--pages/areaconfig/areaconfig.wxml--> 
 <view  style='height: {{winH}}rpx;opacity: {{opacity}};'></view>
<view style='opacity: {{1-opacity}};'> 
<view class='main'>
<view class='viewh1'> 
     <h1 class="h1">区域配置列表</h1>  
     <view class="scbj">
     <image src="{{sc}}" bindtap='bindsc' class="tp" mode="widthFix"></image>
    </view>
      <view class="tpbj">
     <image src="{{tp}}" class="tp" bindtap='bindAdd' mode="widthFix"></image>
     </view>
     </view>
      <view class='flex-wrp_one'>
   <block  wx:for="{{sortedAreas}}" wx:for-item="item">
       <view class="info" data-id="{{item}}" id="{{index}}"   bindtap='areainfo'>
       <view wx:if="{{xz==true}}">
                <image src="../../images/sc.png" class='xztp' catchtap="deletes" data-id="{{item}}"></image>
                </view>
       <image src='../../images/areactr/{{item.atImg}}'style='width:100%; height:190rpx;' mode='widthFix'></image>
                <view class='areaname' wx:if="{{item.aiName==''}}">区域</view>
                <view class='areaname' wx:else>{{item.aiName}}</view>
      </view>
    </block>
    </view> 
    </view>
    <view>
    <loading hidden="{{hidden}}">加载中</loading>
</view>
</view>
