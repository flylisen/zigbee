/* pages/areaconfig/areainfo/areainfo.wxss */
.main{
  width: 100%;
  height: 555px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  color: black;
  font-size: 30px;
}
input{
  border: 1px solid black;
  width: 300px;
  height: 40px;
  margin: 20px 0px;
}
button{
  float: left;
  font-size: 20px;
  margin-left: 50px;
  color: black;
}
.flex-wrp_one{
 display: flex;
 flex-flow: row wrap; 
align-content: space-around;
}
.flex-wrp_one view{
  padding: 15px;
}
.con-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.se-img {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.person {
  width: 616rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #ffffff;
}

.person image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 30rpx 0 40rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 17rpx;
}

.address {
  font-size: 24rpx;
  color: #999999;
}

.tag {
  position: absolute;
  right: 30rpx;
  top: 16rpx;
  width: 110rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #6B7AF8;
  color: #ffffff;
  font-size: 24rpx;
  text-align: center;
}
.view1{
  display: flex;
  margin-top: 20px;
  justify-content:space-around;
}