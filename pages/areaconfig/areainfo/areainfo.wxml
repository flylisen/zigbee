<!--pages/areaconfig/areainfo/areainfo.wxml-->
 <view class='view1'>
    <view wx:if="{{aiNames==''}}">
               <text>区域设备</text>
           </view>
           <view wx:else>
              <text>{{aiNames}}设备</text>
           </view>
           
  </view>
    <form bindsubmit='submit'>
  <view class='button1'>
        <button class='button2' form-type='submit'>删除设备</button>
        <button class='button3' bindtap='delete'>删除区域</button>
   </view>
   <block  wx:for="{{sortedDevs}}" wx:for-item="item" wx:key="item.diDeviceuid">
   <view class="con-wrapper">
       <view wx:if="{{item.diDeviceid==2}}">
 <image src="{{item.isSelect?choseImg:unchoseImg}}" class="se-img" bindtap="chooseTap"  data-index="{{index}}"></image>
               <image src='/images/devctr/kaiguanguan2.png' wx:if="{{item.diOnoffStatu> 0}}" data-tp="{{item}}" id="{{index}}"    style="width:70px;height:70px;"></image>
              <image src='/images/devctr/kaiguanguan.png' wx:else   data-tp="{{item}}" id="{{index}}"  style="width:70px;height:70px;"></image>
                <view wx:if="{{item.diShowName==''}}">开关</view>
                <view wx:else>{{item.diShowName}}</view>
</view>
<view wx:if="{{item.diDeviceid==514&&item.diZonetype==1}}">
<image src="{{item.isSelect?choseImg:unchoseImg}}" class="se-img" bindtap="chooseTap"  data-index="{{index}}"></image>
               <image src='/images/chuanglian/chuangliankai.png' wx:if="{{item.diOnoffStatu> 0}}" data-chuangliand="{{item}}" id="{{index}}"    style="width:70px;height:70px;"></image>
              <image src='/images/chuanglian/chuanglianguan.png' wx:else   data-chuangliand="{{item}}" id="{{index}}"  style="width:70px;height:70px;"></image>
              <view wx:if="{{item.diShowName==''}}">浴帘</view>
              <view wx:else>{{item.diShowName}}</view>
</view>
<view wx:if="{{item.diDeviceid==514&&item.diZonetype==2}}">
<image src="{{item.isSelect?choseImg:unchoseImg}}" class="se-img" bindtap="chooseTap"  data-index="{{index}}"></image>
     <image src='/images/chuanglian/chuangliankai.png' wx:if="{{item.diOnoffStatu> 0}}" data-chuangliand="{{item}}" id="{{index}}"    style="width:70px;height:70px;"></image>
              <image src='/images/chuanglian/chuanglianguan.png' wx:else   data-chuangliand="{{item}}" id="{{index}}"  style="width:70px;height:70px;"></image>
                <view wx:if="{{item.diShowName==''}}">窗帘</view>
                <view wx:else>{{item.diShowName}}</view>
         </view>
<view wx:if="{{item.diDeviceid==528}}">
<image src="{{item.isSelect?choseImg:unchoseImg}}" class="se-img" bindtap="chooseTap"  data-index="{{index}}"></image>
           <image src='/images/devctr/deng2.png' style="width:70px;height:70px;" wx:if="{{item.diOnoffStatu>0}}" data-deng="{{item}}" id="{{index}}" ></image>
  <image src='/images/devctr/deng.png' wx:else   data-deng="{{item}}" id="{{index}}"  style="width:70px;height:70px;"></image>  
                <view wx:if="{{item.diShowName==''}}">RGBW灯</view>
                <view wx:else>{{item.diShowName}}</view>
         </view>

<view wx:if="{{item.diDeviceid==769&&item.diZonetype==1}}">
 <image src="{{item.isSelect?choseImg:unchoseImg}}" class="se-img" bindtap="chooseTap" data-index="{{index}}"></image>
              <image src='/images/devctr/wenkongqi.png' style="width:70px;height:70px;"></image>
                <view wx:if="{{item.diShowName==''}}">温控器</view>
                <view wx:else>{{item.diShowName}}</view>
         </view>
<view wx:if="{{item.diDeviceid==544&&item.diZonetype==255}}">
<image src="{{item.isSelect?choseImg:unchoseImg}}" class="se-img" bindtap="chooseTap" data-index="{{index}}"></image>
              <image src='/images/devctr/sewendeng.png' style="width:70px;height:70px;"></image> 
                  <view wx:if="{{item.diShowName==''}}">色温（CCT）灯</view>
                  <view wx:else>{{item.diShowName}}</view>
         </view>
         </view>
    </block>    
    </form>