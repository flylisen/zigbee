.main{
  overflow-x:hidden;
}
.v1{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  }
.title{
  color: black;
  font-size: 30px;
}
.header{
  margin-left: 50rpx;
}
input{
  border: 1px solid black;
  width: 89%;
  height: 40px;
  margin: 40rpx 20rpx;
  padding-left: 25rpx;
}
.button1{
  color: white;
  border-radius: 50rpx;
  padding:0rpx 100rpx;
  background: orange;
  margin-top: 20rpx;
