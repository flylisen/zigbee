<!--pages/areaconfig/areaadd/areaadd.wxml-->
<view class='main'>
  <view>
   <image src='/images/areactr/areaadd.png' style="width:70px;height:70px;"></image>
  </view>
  <view class='body'>
    <form bindsubmit='submit'>
      <view>
        <text class='header'>区域名称：</text>
        <input placeholder='区域名称' name="areaname" maxlength='8'></input>
      </view>
      <view class='top-text'>区域所选类型</view>

<!-- 下拉框 -->

<view class='top-selected' bindtap='bindShowMsg'>

  <text>{{grade_name}}</text>

</view>

<!-- 下拉需要显示的列表 -->

<view class="select_box" wx:if="{{select}}">

  <view wx:for="{{areaTypeList}}" wx:key="unique">

    <view class="select_one" bindtap="mySelect" data-name="{{item.atName}}">{{item.atName}}</view>

  </view>

</view>
<view class='device'>添加设备</view>
   <view class="link">
   <block  wx:for="{{sortedDevs}}" wx:for-item="item" wx:key="item.diDeviceuid">
       <view class="link_child" wx:if="{{item.diDeviceid==2}}">
       <image src='/images/areactr/background.png' style='width:100%; height:100%;' mode='widthFix'></image>
         <image src='/images/devctr/switchdj.png' class='tp' wx:if="{{item.diOnoffStatu> 0}}" style='width:7%; height:7%;' mode='widthFix'></image>
         <image src='/images/devctr/switchwdj.png' class='tp' wx:else style='width:7%; height:7%;' mode='widthFix'></image>
        <image src="{{item.isSelect?choseImg:unchoseImg}}" class="tb" bindtap="chooseTap" style='width:7%; height:7%;' mode='widthFix' data-index="{{index}}"></image>
                <view wx:if="{{item.diShowName==''||item.diShowName==null}}" class="{{item.diShowName.length>4?'zt2':'zt1'}}">开关</view>
                <view wx:else class="{{item.diShowName.length>4?'zt2':'zt1'}}">{{item.diShowName}}</view>
</view>
<view class="link_child" wx:if="{{item.diDeviceid==514&&item.diZonetype==1}}">
<image src='/images/areactr/background.png' style='width:100%; height:100%;' mode='widthFix'></image>
         <image src='/images/chuanglian/clk.jpg' class='tp' wx:if="{{item.diOnoffStatu> 0}}" style='width:7%; height:7%;' mode='widthFix'></image>
         <image src='/images/chuanglian/clg.jpg' class='tp' wx:else style='width:7%; height:7%;' mode='widthFix'></image>
        <image src="{{item.isSelect?choseImg:unchoseImg}}" class="tb" bindtap="chooseTap" style='width:7%; height:7%;' mode='widthFix' data-index="{{index}}"></image>
              <view wx:if="{{item.diShowName==''||item.diShowName==null}}" class="{{item.diShowName.length>4?'zt2':'zt1'}}">浴帘</view>
              <view wx:else class="{{item.diShowName.length>4?'zt2':'zt1'}}">{{item.diShowName}}</view>
</view>
<view class="link_child" wx:if="{{item.diDeviceid==514&&item.diZonetype==2}}">
<image src='/images/areactr/background.png' style='width:100%; height:100%;' mode='widthFix'></image>
         <image src='/images/chuanglian/clk.jpg' class='tp' wx:if="{{item.diOnoffStatu> 0}}" style='width:7%; height:7%;' mode='widthFix'></image>
         <image src='/images/chuanglian/clg.jpg' class='tp' wx:else style='width:7%; height:7%;' mode='widthFix'></image>
        <image src="{{item.isSelect?choseImg:unchoseImg}}" class="tb" bindtap="chooseTap" style='width:7%; height:7%;' mode='widthFix' data-index="{{index}}"></image>
                <view wx:if="{{item.diShowName==''||item.diShowName==null}}" class="{{item.diShowName.length>4?'zt2':'zt1'}}">窗帘</view>
                <view wx:else class="{{item.diShowName.length>4?'zt2':'zt1'}}">{{item.diShowName}}</view>
         </view>
<view class="link_child" wx:if="{{item.diDeviceid==528}}">
<image src='/images/areactr/background.png' style='width:100%; height:100%;' mode='widthFix'></image>
         <image src='/images/devctr/dengdj.png' class='tp' wx:if="{{item.diOnoffStatu> 0}}" style='width:7%; height:7%;' mode='widthFix'></image>
         <image src='/images/devctr/dengwdj.png' class='tp' wx:else style='width:7%; height:7%;' mode='widthFix'></image>
        <image src="{{item.isSelect?choseImg:unchoseImg}}" class="tb" bindtap="chooseTap" style='width:7%; height:7%;' mode='widthFix' data-index="{{index}}"></image>  
                <view wx:if="{{item.diShowName==''||item.diShowName==null}}" class="{{item.diShowName.length>4?'zt2':'zt1'}}">RGBW灯</view>
                <view wx:else class="{{item.diShowName.length>4?'zt2':'zt1'}}">{{item.diShowName}}</view>
         </view>
<view class="link_child" wx:if="{{item.diDeviceid==769&&item.diZonetype==1}}">
<image src='/images/areactr/background.png' style='width:100%; height:100%;' mode='widthFix'></image>
         <image src='/images/devctr/airdj.png' class='tp'  style='width:7%; height:7%;' mode='widthFix'></image>
        <image src="{{item.isSelect?choseImg:unchoseImg}}" class="tb" bindtap="chooseTap" style='width:7%; height:7%;' mode='widthFix' data-index="{{index}}"></image>
                <view wx:if="{{item.diShowName==''||item.diShowName==null}}" class="{{item.diShowName.length>4?'zt2':'zt1'}}">温控器</view>
                <view wx:else class="{{item.diShowName.length>4?'zt2':'zt1'}}">{{item.diShowName}}</view>
         </view>
<view class="link_child" wx:if="{{item.diDeviceid==544&&item.diZonetype==255}}">
<image src='/images/areactr/background.png' style='width:100%; height:100%;' mode='widthFix'></image>
         <image src='/images/devctr/sewendeng.png' class='tp'  style='width:7%; height:7%;' mode='widthFix'></image>
        <image src="{{item.isSelect?choseImg:unchoseImg}}" class="tb" bindtap="chooseTap" style='width:7%; height:7%;' mode='widthFix' data-index="{{index}}"></image>
                  <view wx:if="{{item.diShowName==''||item.diShowName==null}}" class="{{item.diShowName.length>4?'zt2':'zt1'}}">色温（CCT）灯</view>
                  <view wx:else class="{{item.diShowName.length>4?'zt2':'zt1'}}">{{item.diShowName}}</view>
         </view>
    </block> 
    </view>
    <button class='button1' form-type='submit'>确定</button>
    </form>
  </view>
</view>
<view>
    <loading hidden="{{hidden}}">加载中</loading>
</view>
