<!--pages/areactr/areactr.wxml-->
<view class='viewh1'> 
     <h1>全部区域</h1>
     <view wx:if="{{rommid != 888}}">
     <button class='btn' hover-class="hover" bindtap='bindAdd'>配置</button> 
     </view>
     </view>
      <view class='flex-wrp_one'>
   <block  wx:for="{{sortedAreas}}" wx:for-item="item">
       <view>
               <image src='../../images/areactr/{{item.atImg}}' data-id="{{item}}" id="{{index}}"   bindtap='areainfo' style="width:70px;height:70px;"></image>
                <view wx:if="{{item.aiName==''}}">区域</view>
                <view wx:else>{{item.aiName}}</view>
      </view>
    </block>
</view>