<!--pages/devctr/devctr.wxml-->
<view>
    <view class='viewh1'>
     <h1>全部设备</h1> 
      </view>
       <view wx:for="{{Industry}}" wx:for-item="item" class='count'> 
             <view wx:if="{{item.diId==133}}" bindtap='chuangliandk'>
                 <image src='../../images/devctr/chuanglian.png' style="width:70px;height:70px;"></image>
                 <view wx:if="{{item.diOnlineStatu==0}}">
                 <image src='../../images/devctr/yuandian.png' style="width:30px;height:30px;"></image>
                 </view>
                 <view wx:if="{{item.diOnlineStatu>0}}">
                 <image src='../../images/devctr/yuandian2.png' style="width:30px;height:30px;"></image>
                 </view>
                 <view>窗帘</view>
           </view>
            <view wx:if="{{item.diId==141}}">
                  <image src='../../images/devctr/kaiguanguan2.png' bindtap='kaiguanguan1'  wx:if="{{collected1>0}}" style="width:70px;height:70px;"></image>
                  <image src='../../images/devctr/kaiguanguan.png' bindtap='kaiguanguan1'  wx:else style="width:70px;height:70px;"></image>
                 <view wx:if="{{item.diOnlineStatu==0}}">
                 <image src='../../images/devctr/yuandian.png' style="width:30px;height:30px;"></image>
                 </view>
                 <view wx:if="{{item.diOnlineStatu>0}}">
                 <image src='../../images/devctr/yuandian2.png' style="width:30px;height:30px;"></image>
                 </view>
                 <view>开关1</view>
           </view>
          <view wx:if="{{item.diId==142}}">
                           <image src='../../images/devctr/kaiguanguan2.png' bindtap='kaiguanguan2'  wx:if="{{collected2>0}}"style="width:70px;height:70px;"></image>
                  <image src='../../images/devctr/kaiguanguan.png' bindtap='kaiguanguan2'  wx:else style="width:70px;height:70px;"></image>
                 <view wx:if="{{item.diOnlineStatu==0}}">
                 <image src='../../images/devctr/yuandian.png' style="width:30px;height:30px;"></image>
                 </view>
                 <view wx:if="{{item.diOnlineStatu>0}}">
                 <image src='../../images/devctr/yuandian2.png' style="width:30px;height:30px;"></image>
                 </view>
                 <view>{{item.diName}}</view>
           </view>   
       </view>
      <!--模态框-->
     <view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
      <view class='modalDlg' wx:if="{{showModal}}">
        <button bindtap="go">关闭</button>
     </view>
</view>