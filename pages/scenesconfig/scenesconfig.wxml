<!--pages/scenesconfig/scenesconfig.wxml-->
<view class='viewh1'>
     <h1>场景配置列表</h1>
     <button class='btn' hover-class="hover" bindtap='bindAdd'>新增</button>
</view>
        <view class="link">
        <block  wx:for="{{scenes}}" wx:for-item="item">
        <view bindtap='changjing' data-id="{{item}}" class="link_child" id="{{index}}">
               <image src="{{index==ins?'/images/scenesctr/scenesettringdj.png':'/images/scenesctr/scenesettringwdj.png'}}" mode="scaleToFill" class="{{item.siShowName.length>=5?'background-image1':'background-image2'}}"></image>
               <image class="btnImg1" src='../../images/scenesctr/scene.png' style="width:40px;height:40px;"></image>
                <view class="{{item.siShowName.length>=4?'btnImg2':'btnImg3'}}" wx:if="{{item.siShowName==''}}">场景</view>
                <view class="{{item.siShowName.length>=4?'btnImg2':'btnImg3'}}" wx:else>{{item.siShowName}}</view>
         </view>
       </block>
</view>
<view>
    <loading hidden="{{hidden}}">加载中</loading>
</view>

        
        
