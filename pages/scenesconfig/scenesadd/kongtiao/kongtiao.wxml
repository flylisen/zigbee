<!--pages/scenesconfig/scenesadd/kongtiao/kongtiao.wxml-->
<view class='count'>
<image src='../../../../images/devctr/wenkongqi.png' style="width:70px;height:70px;"></image>
  <view wx:if="{{diNames==''}}">
               <text>名称 :温控器</text>
           </view>
           <view wx:else>
        <text>名称 :{{diNames}}</text>
    </view>
    <view bindtap='kaiguan'>
      <image src='../../../../images/devctr/kaiguan.png' style="width:50px;height:50px;"></image>
    </view>
</view>
<view>
        <view>
        <image src="../../../../images/devctr/kongtiao.png"></image>
        </view>
    <view class='kongtiao'>
            <view bindtap='showDialogBtn'>
            <image src='../../../../images/devctr/wendu.png' style="width:50px;height:50px;"></image>
            <view>温度</view>
            </view>
            <view bindtap='tongfeng'>
            <image src='../../../../images/devctr/moshi.png' style="width:50px;height:50px;"></image>
            <view>模式</view>
            </view>
             <view bindtap='actioncnt'>
            <image src='../../../../images/devctr/fengsu.png' style="width:50px;height:50px;"></image>
             <view>风速</view>
            </view>
    </view>
</view>
<!--弹窗-->
<view class="modal-mask" bindtap="hideModal" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<view class="modal-dialog" wx:if="{{showModal}}">
  <view class="modal-title">温度</view>
  <view class="modal-content">
    <view class="modal-input">
      <input placeholder-class="input-holder" type="digit" maxlength="10" bindinput="wendu" class="input" placeholder="请输入温度"></input>
    </view>
  </view>
  <view class="modal-footer">
    <view class="btn-cancel" bindtap="onCancel" data-status="cancel">取消</view>
    <view class="btn-confirm" bindtap="onConfirm" data-status="confirm">确定</view>
  </view>
</view>
