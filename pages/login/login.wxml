<view class="container">
<image class='background-image' src='/images/loginsettring.jpg' mode="scaleToFill"></image> 
 <view class="login-from"> 
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="/images/yhm.png"></image> 
  <label class="loginLab">账号</label> 
  <input class="inputText" value='{{username}}' placeholder="请输入账号" placeholder-style="color:white;" bindinput="phoneInput" /> 
 </view> 
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="/images/mm.png"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" value='{{pwd}}' password="true" placeholder="请输入密码" placeholder-style="color:white;" bindinput="passwordInput" /> 
 </view> 
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button> 
 </view> 
 </view> 
</view>
