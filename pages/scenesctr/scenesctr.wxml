<!--pages/scenesctr/scenesctr.wxml-->
<view class='viewh1'>
     <text class='text'>全部场景</text>
     <view wx:if="{{rommid == 'rs'}}">
     <button class='btn' hover-class="hover" bindtap='pz'>配置</button> 
     </view>
</view>
        <view class="link">
        <block  wx:for="{{scenes}}" wx:for-item="item">
        <view bindtap='chang' data-id="{{item}}" class="link_child" id="{{index}}">
                <image src="../../images/scenesctr/scenebj.png" class='bjtp'></image>
                <view wx:if="{{index==ins}}">
                <image src="../../images/scenesctr/scenexz.png" class='xz'></image>
                </view>
                <view class="{{item.siShowName.length>4?'showtext1':'showtext2'}}" wx:if="{{item.siShowName==''}}">场景</view>
                <view class="{{item.siShowName.length>4?'showtext1':'showtext2'}}" wx:else>{{item.siShowName}}</view>
         </view>
       </block>
</view>
<view>
    <loading hidden="{{hidden}}">加载中</loading>
</view>


